<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{pageTitle}
    link(rel="stylesheet", href="/css/main.css")
    block css
    block js
  body
    div(class="container")
      header
        div(class="header-logo")
          a(href="/pages/RV-Form.html")
            img(src="/images/logo.png", class="header-logo-img")
        nav(class="header-nav-menu")
          ul(class="header-nav-menu-list")
            li(class="header-nav-list-item")
              a(href="/pages/RV-Form.html", class=(path==='/home' ? 'active' : '')) Home
            li(class="header-nav-list-item")
              a(href="/pages/RV-Form.html", class=(path==='/other1' ? 'active' : '')) Other 1
            li(class="header-nav-list-item")
              a(href="/pages/RV-Form.html", class=(path==='/other2' ? 'active' : '')) Other 2
      main
        block content