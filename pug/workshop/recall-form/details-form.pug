div(class="form-section", id="detailsForm")
    include ../../templates/vehicle-heading
    h2 Owner Details
    .form
        label(for="nameInput", class="required-label inlineP", id="nameInputLabel") Name
        input(type="button", value="Clear All", id="clearBtn", class="aButton")
        div(class="textInput")
            input(type="text", id="nameInput", name="name", class="validate", value=data.owner.name, required)
        span(class="errorMessage", id="nameInputError")
        br
        label(for="phoneInput", class="required-label", id="phoneInputLabel") Phone
        div(class="textInput")
            input(type="text", id="phoneInput", name="phone", class="validate phone", pattern="(04[0-9]{2} [0-9]{3} [0-9]{3})|(0[1-3|5-9] [0-9]{4} [0-9]{4})", value=data.owner.phone, required)
        span(class="errorMessage", id="phoneInputError")
        br
        label(for="emailInput", class="required-label", id="emailInputLabel") Email
        div(class="textInput")
            input(type="email", id="emailInput", name="email", class="validate", value=data.owner.email, required)
        span(class="errorMessage", id="emailInputError")
        br
        label(for="streetInput", id="streetInputLabel") Postal Address
        div(class="textInput")
            input(type="text", id="streetInput", name="street", class="validate", placeholder="Street", value=data.owner.street)
        span(class="errorMessage", id="streetInputError")
        div(class="textInput")
            input(type="text", id="suburbInput", name="suburb", class="validate", placeholder="Suburb", value=data.owner.suburb)
        span(class="errorMessage", id="suburbInputError")
        div(class="textInput")
            select(id="stateInput", name="state", class="validate dropdown")
                option(value="", selected, disabled, hidden) State
                option(value="ACT", selected= data.owner.state == "ACT") Australian Capital Territory 
                option(value="NSW", selected= data.owner.state == "NSW") New South Wales
                option(value="NT", selected= data.owner.state == "NT") Northern Territory
                option(value="Qld", selected= data.owner.state == "Qld") Queensland
                option(value="SA", selected= data.owner.state == "SA") South Australia
                option(value="Tas", selected= data.owner.state == "Tas") Tasmania
                option(value="Vic", selected= data.owner.state == "Vic") Victoria 
                option(value="WA", selected= data.owner.state == "WA") Western Australia 
        span(class="errorMessage", id="stateInputError")
        div(class="textInput")
            input(type="text", id="postcodeInput", name="postcode", class="validate", pattern="[0-9]{4}", placeholder="Postcode", value=data.owner.postcode)
        span(class="errorMessage", id="postcodeInputError")
        br
        label(for="regoNInput", id="streetInputLabel") Registration Details
        div(class="textInput")
            input(type="text", id="regoNoInput", name="regoNo", class="validate", placeholder="Registration Plate Number", value=data.owner.regoNo)
        span(class="errorMessage", id="regoNoInputError")
        div(class="textInput")
            select(id="regoStateInput", name="regoState", class="validate dropdown")
                option(value="", disabled, selected, hidden) State of Registration
                option(value="ACT", selected= data.owner.regoState == "ACT") Australian Capital Territory 
                option(value="NSW", selected= data.owner.regoState == "NSW") New South Wales
                option(value="NT", selected= data.owner.regoState == "NT") Northern Territory
                option(value="Qld", selected= data.owner.regoState == "Qld") Queensland
                option(value="SA", selected= data.owner.regoState == "SA") South Australia
                option(value="Tas", selected= data.owner.regoState == "Tas") Tasmania
                option(value="Vic", selected= data.owner.regoState == "Vic") Victoria 
                option(value="WA", selected= data.owner.regoState == "WA") Western Australia 
        span(class="errorMessage", id="regoStateInputError")
        div(class="textInput")
            input(type="date", id="regoDtInput", name="regoDt", class="validate", placeholder="Date of Registration", value= (data.owner.regoDt==null?null:data.owner.regoDt.substr(0,10)))
        span(class="errorMessage", id="postcodeInputError")
        br
        input(type="button", value="Submit", id="detailsSubmitBtn", class="submitBtn")
        if allowSkip !== false
            p.inlineP &nbsp; or &nbsp;
            input(type="button", value="Skip", class="aButton", id="detailsSkipBtn")