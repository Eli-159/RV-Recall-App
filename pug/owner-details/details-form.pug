div(class="form-section", id="detailsForm")
    include ../templates/vehicle-heading
    h2 Your Details
    .form
        label(for="nameInput", class="required-label inlineP", id="nameInputLabel") Name
        input(type="button", value="Clear All", id="clearBtn", class="aButton")
        div(class="textInput")
            input(type="text", id="nameInput", name="name", class="validate", value=(emailLink ? data.owners[0].name : ''), required)
        span(class="errorMessage", id="nameInputError")
        br
        label(for="phoneInput", class="required-label", id="phoneInputLabel") Phone
        div(class="textInput")
            input(type="text", id="phoneInput", name="phone", class="validate phone", pattern="(04[0-9]{2} [0-9]{3} [0-9]{3})|(0[1-3|5-9] [0-9]{4} [0-9]{4})", value=(emailLink ? data.owners[0].phone : ''), required)
        span(class="errorMessage", id="phoneInputError")
        br
        label(for="emailInput", class="required-label", id="emailInputLabel") Email
        div(class="textInput")
            input(type="email", id="emailInput", name="email", class="validate", value=(emailLink ? data.owners[0].email : ''), required)
        span(class="errorMessage", id="emailInputError")
        br
        label(for="streetInput", id="streetInputLabel") Postal Address
        div(class="textInput")
            input(type="text", id="streetInput", name="street", class="validate", placeholder="Street", value=(emailLink ? data.owners[0].street : ''))
        span(class="errorMessage", id="streetInputError")
        div(class="textInput")
            input(type="text", id="suburbInput", name="suburb", class="validate", placeholder="Suburb", value=(emailLink ? data.owners[0].suburb  : ''))
        span(class="errorMessage", id="suburbInputError")
        div(class="textInput")
            select(id="stateInput", name="state", class="validate dropdown")
                option(value="", selected, disabled, hidden) State
                option(value="ACT", selected=(data.owners[0].state == 'ACT')) Australian Capital Territory 
                option(value="NSW", selected=(data.owners[0].state == 'NSW')) New South Wales
                option(value="NT", selected=(data.owners[0].state == 'NT')) Northern Territory
                option(value="Qld", selected=(data.owners[0].state == 'Qld')) Queensland
                option(value="SA", selected=(data.owners[0].state == 'SA')) South Australia
                option(value="Tas", selected=(data.owners[0].state == 'Tas')) Tasmania
                option(value="Vic", selected=(data.owners[0].state == 'Vic')) Victoria 
                option(value="WA", selected=(data.owners[0].state == 'WA')) Western Australia 
        span(class="errorMessage", id="stateInputError")
        div(class="textInput")
            input(type="text", id="postcodeInput", name="postcode", class="validate", pattern="[0-9]{4}", placeholder="Postcode", value=(emailLink ? data.owners[0].postcode : ''))
        span(class="errorMessage", id="postcodeInputError")
        br
        label(for="regoNInput", id="streetInputLabel") Registration Details
        div(class="textInput")
            input(type="text", id="regoNoInput", name="regoNo", class="validate", placeholder="Registration Plate Number", value=(emailLink ? data.owners[0].regoNo : ''))
        span(class="errorMessage", id="regoNoInputError")
        div(class="textInput")
            select(id="regoStateInput", name="regoState", class="validate dropdown")
                option(value="", disabled, selected, hidden) State of Registration
                option(value="ACT", selected=(data.owners[0].regoState == 'ACT')) Australian Capital Territory 
                option(value="NSW", selected=(data.owners[0].regoState == 'NSW')) New South Wales
                option(value="NT", selected=(data.owners[0].regoState == 'NT')) Northern Territory
                option(value="Qld", selected=(data.owners[0].regoState == 'Qld')) Queensland
                option(value="SA", selected=(data.owners[0].regoState == 'SA')) South Australia
                option(value="Tas", selected=(data.owners[0].regoState == 'Tas')) Tasmania
                option(value="Vic", selected=(data.owners[0].regoState == 'Vic')) Victoria 
                option(value="WA", selected=(data.owners[0].regoState == 'WA')) Western Australia 
        span(class="errorMessage", id="regoStateInputError")
        div(class="textInput")
            input(type="date", id="regoDtInput", name="regoDt", class="validate", min="2000-01-01", max=todayDate, placeholder="Date of Registration", value=(emailLink ? data.owners[0].regoDt.substr(0,10) : ''))
        span(class="errorMessage", id="regoDtInputError")
        br
        if recallSection
            label(for="workshopChoiceInput", id="workshopChoiceInputLabel", class="required-label") Preferred Workshop for Service
            div(class="textInput")
                select(id="workshopChoiceInput", name="workshopChoice", class="validate dropdown", required)
                    option(value="", selected, disabled, hidden) Workshop
                    option(value="sydney") Elite Sydney
                    option(value="melbourne") Elite Melbourne
                    option(value="gold-coast") Elite Gold Coast
                    option(value="other") None of these are accessible
            span(class="errorMessage", id="workshopChoiceInputError")
            div(class="textareaInput")
                textarea(name="notes", id="notesInput", placeholder="Notes/Comments" cols="60", rows="10")
            br
        input(type="button", value="Submit", id="detailsSubmitBtn", class="submitBtn")
    br
    p If you have any difficulty in completing this form please email us at 
        a(href="mailto:info@my-rv.com.au") info@my-rv.com.au.