div(class="form-section", id="detailsForm")
    include ../templates/vehicle-heading
    h2 Your Details
    .form
        label(for="nameInput", class="required-label", id="nameInputLabel") Name
        div(class="textInput")
            input(type="text", id="nameInput", class="validate", name="name", required)
        span(class="errorMessage", id="nameInputError")
        br
        label(for="phoneInput", class="required-label", id="phoneInputLabel") Phone
        div(class="textInput")
            input(type="text", id="phoneInput", class="validate phone", name="phone", pattern="(04[0-9]{2} [0-9]{3} [0-9]{3})|(0[1-3|5-9] [0-9]{4} [0-9]{4})", required)
        span(class="errorMessage", id="phoneInputError")
        br
        label(for="emailInput", class="required-label", id="emailInputLabel") Email
        div(class="textInput")
            input(type="email", id="emailInput", class="validate", name="email", required)
        span(class="errorMessage", id="emailInputError")
        br
        label(for="streetInput", id="streetInputLabel") Postal Address
        div(class="textInput")
            input(type="text", id="streetInput", class="validate", name="street")
        span(class="errorMessage", id="streetInputError")
        br
        label(for="suburbInput", id="suburbInputLabel") Suburb
        div(class="textInput")
            input(type="text", id="suburbInput", class="validate", name="suburb")
        span(class="errorMessage", id="suburbInputError")
        br
        label(for="stateInput", id="stateInputLabel") State
        div(class="textInput")
            select(id="stateInput", name="state", class="validate dropdown")
                option(value="", selected, disabled, hidden)
                option(value="ACT") Australian Capital Territory 
                option(value="NSW") New South Wales
                option(value="NT") Northern Territory
                option(value="Qld") Queensland
                option(value="SA") South Australia
                option(value="Tas") Tasmania
                option(value="Vic") Victoria 
                option(value="WA") Western Australia 
        span(class="errorMessage", id="stateInputError")
        br
        label(for="postcodeInput", id="postcodeInputLabel") Postcode
        div(class="textInput")
            input(type="text", id="postcodeInput", class="validate", name="postcode", pattern="[0-9]{4}")
        span(class="errorMessage", id="postcodeInputError")
        br
        input(type="button", value="Submit", id="detailsSubmitBtn", class="submitBtn")